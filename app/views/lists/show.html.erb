<title>List</title>
<h1><%= @list_view.list_name %></h1>
<ul class="list_group">
<% @item_array.each do |t|%>
  <li class="list-group-item"> <%= link_to t.Item_name, list_item_path(@list_view.id, t) %> </li>
<% end %>
</ul>
<br/>
<%= link_to "Add Items to List", new_list_item_path(:list_id => @list_view.id), class: 'btn btn-success' %>
<%= link_to "Rename List", edit_list_path, class: 'btn btn-info' %>
<%= link_to "Go Back", root_path, class: 'btn btn-default' %>
<hr/>
<%= button_to "Delete List", @list_view, class: 'btn btn-danger', :method => :delete %>
